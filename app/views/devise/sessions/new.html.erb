<div class="row initial-page">
  <div class="my-title">
    <h2 class="the-title">
      <%= image_tag 'receitas.png', width: 300 %>
    </h2>
  </div>
  <div class="columns login-banner-left">
    <div class="column">
      <%= image_tag 'capa.png', class: 'banner-1' %>
    </div>
    <div class="column login-side">
      <div class="login-panel">
          <h2 class="title has-text-centered">Acessar</h2>

          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="field">
              <div class="control">
                <%= f.label :email , class: 'label' %>
                <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'input' %>
              </div>
            </div>

            <div class="field">
              <div class="control">
                <%= f.label :password , class: 'label' %>
                <%= f.password_field :password, autocomplete: "current-password", class: 'input ' %>
              </div>
            </div>

            <% if devise_mapping.rememberable? %>
              <div class="field remember-box">
                <%= f.label :remember_me, 'Manter conectado' %>
                <%= f.check_box :remember_me %>
              </div>
            <% end %>

            <div class="actions submit-button has-text-centered">
              <%= f.submit "Entrar", class: 'button is-danger' %>
            </div>
          <% end %>
        <div class="shared-links">
          <%= render "devise/shared/links" %>
        </div>
        </div>

      </div>
  </div>
</div>

